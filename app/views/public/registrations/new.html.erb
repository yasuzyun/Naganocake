<h2>新規登録p</h2>
<div class="row">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

 <table>
      <tbody>
          <tr>
            <th>名前</th>
            <td class="sign-up-small-cell">(姓)</td>
            <td><%= f.text_field :last_name, autofocus: true %></td>
            <td class="sign-up-small-cell">(名)</td>
            <td><%= f.text_field :first_name, autofocus: true %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td class="sign-up-small-cell">(セイ)</td>
            <td><%= f.text_field :last_name_kana, autofocus: true %></td>
            <td class="sign-up-small-cell">(メイ)</td>
            <td><%= f.text_field :first_name_kana, autofocus: true %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email"%></td>
          </tr>
          <tr>
          <th>郵便番号（ハイフンなし）</th>
          <td class="sign-up-small-cell"></td>
          <td><%= f.text_field :postal_code, autofocus: true %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td class="sign-up-small-cell"></td>
            <td colspan="3"><%= f.text_field :address, autofocus: true, class: "sign-up-address" %></td>
          </tr>
          <tr>
            <th>電話番号（ハイフンなし）</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.text_field :phone_number, autofocus: true %></td>
          </tr>
          <tr>

          <tr>
            <th>パスワード（６文字以上）</th>
            <td class="sign-up-small-cell"></td>
           <% if @minimum_password_length %>
          <td>(<%= @minimum_password_length %> characters minimum)</td>
           <% end %><br />
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <th>パスワード（確認用）</th>
            <td class="sign-up-small-cell"></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
           </tr>
          <br>
          <br>
       </tbody>
    </table>

           <div class="actions">
            <%= f.submit "新規登録", class: "btn btn-success btn-lg center-block" %>
            </div>
           <% end %>
    </div>
</div>

<%= render "public/shared/links" %>
